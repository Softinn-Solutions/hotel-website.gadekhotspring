@using Softinn.EntityModels.ViewModel
@{
    if (ViewBag.ViewModel.CMSSetting != null)
	{
        ViewBag.MetaTitle = $"Contact of {ViewBag.ViewModel.CMSSetting.PropertyName}";
        ViewBag.MetaDescription = $"Address and phone number of {ViewBag.ViewModel.CMSSetting.PropertyName}";
    }

    CMSSettingViewModel cmsSetting = ViewBag.ViewModel.CMSSetting;
}
<div id="page-contact-us">

    <section class="section-sub-banner bg-7">
        <div class="awe-overlay"></div>
        <div class="sub-banner">
            <div class="container">
                <div class="text text-center">
                    <h2>Hubungi Kami</h2>
                    <p>Hilangkan semua keraguan anda dengan menghubungi kami</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section-contact">
        <div class="container">
            <div class="contact">
                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <div class="text">
                            <h2>Hubungi Kami</h2>
                            @if (cmsSetting != null)
                            {
                                <ul>
                                    <li><i class="fa fa-map-marker contact-icon"></i> @cmsSetting.PropertyAddress</li>
                                    <li><i class="fa fa-phone contact-icon"></i> <a href="tel:@cmsSetting.PropertyPhoneNumber" rel="nofollow">@cmsSetting.PropertyPhoneNumber</a> (for calls and WhatsApp)</li>
                                    @if (cmsSetting.PropertySecondPhoneNumber != null && cmsSetting.PropertyPhoneNumber != cmsSetting.PropertySecondPhoneNumber)
                                    {
                                        <li><i class="fa fa-phone contact-icon"></i> <a href="tel:@cmsSetting.PropertySecondPhoneNumber" rel="nofollow">@cmsSetting.PropertySecondPhoneNumber</a></li>
                                    }
                                    @if (cmsSetting.PropertyFaxNumber != null)
                                    {
                                        <li><i class="fa fa-fax contact-icon"></i> @cmsSetting.PropertyFaxNumber</li>
                                    }
                                    <li><i class="fa fa-envelope-o contact-icon"></i> <a href="mailto:@cmsSetting.PropertyEmail">@cmsSetting.PropertyEmail</a></li>
                                </ul>
                            }
                            <span class="divider-line"></span>
                            <div class="chgfont"><p>Tunggu apa lagi! Tempah terus di laman web ini untuk harga terbaik!</p></div>
                            <div class="mailchimp">
                                <div class="mailchimp-form">
                                    <a href="/Reservation" target="_blank" type="submit" class="awe-btn awe-btn-13">TEMPAH DENGAN HARGA TERBAIK</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <div class="contact-form" ng-app="app" ng-controller="contactFormController">
                            <form novalidate angular-validator angular-validator-submit="onContactFormSubmit()" name="contactForm">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-md-3 col-xs-4">
                                                <select class="field-text" required tabindex="4" ng-model="form.Salutation">
                                                    <option>Mr</option>
                                                    <option>Mrs</option>
                                                    <option>Ms</option>
                                                </select>
                                            </div>
                                            <div class="col-md-9 col-xs-8">
                                                <input type="text" class="field-text" name="Name" placeholder="Nama" ng-model="form.Name" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Email" placeholder="Email" ng-model="form.Email" validate-on="blur" ng-pattern="/^[_a-z0-9]+(\.[_a-z0-9]+)*&#64[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Phone" placeholder="Nombor Telefon" ng-model="form.Phone" validate-on="dirty" required>
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" class="field-text" name="Subject" placeholder="Subjek" ng-model="form.Subject" validate-on="dirty" required>
                                    </div>
                                    <div class="col-sm-12">
                                        <textarea cols="30" rows="10" name="Message" class="field-textarea" placeholder="Mesej Anda" ng-model="form.Message" validate-on="dirty" required></textarea>
                                    </div>
                                    <div class="col-sm-6">
                                        <button type="submit" class="ghostbutton" ng-disabled="isLoading || myFormName.$invalid">
                                            <i class="fa fa-paper-plane" ng-show="!isLoading"></i>
                                            <i class="fa fa-circle-o-notch fa-spin fa-fw" ng-show="isLoading"></i>
                                            &nbsp;&nbsp;HANTAR
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section-contact">
        <div class="container">
            <div class="col-sm-12">
                <div class="contact map">
                    <div class="text">
                        <h2>Lokasi</h2>
                        <div class="contact-map">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3986.2943114119976!2d102.239122!3d2.4083053!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31ce0300148b0ba7%3A0xa56365e4fe7713ac!2sKOMPLEKS%20AIR%20PANAS%20GADEK!5e0!3m2!1sen!2smy!4v1741228704980!5m2!1sen!2smy" frameborder="0" style="border: 0; width: 100%; height: 470px; " allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

@section css{
    <link href="~/css/sweetalert.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/angular-1.5.7.js"></script>
    <script src="~/Scripts/angular-animate-1.5.7.js"></script>
    <script src="~/Scripts/angular-messages-1.5.7.js"></script>
    <script src="~/Scripts/angular-sanitize-1.5.7.js"></script>
    <script src="~/Scripts/angular-validator.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>
    <script src="~/app/Controller/ContactFormController.js"></script>

    <script type="text/javascript">
        var app = angular.module("app", ["ngAnimate", "ngMessages", "angularValidator"]);
        var directives = {};
        var factories = {};
        var controllers = {};

        app.factory(factories);

        app.directive(directives);

        contactFormController.$inject = ["$scope", "$http"];
        controllers.contactFormController = contactFormController;
        app.controller(controllers);
    </script>
}
@using Softinn.EntityModels.ViewModel
@{
    HotelViewModel hotel = ViewBag.ViewModel.Hotel;
    ViewData["Title"] = "Dining";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-sub-banner bg-1">
    <div class="awe-overlay"></div>
    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>Dining</h2>
            </div>
        </div>
    </div>
</section>

<section class="section-facilities">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12 facility">
                <div class="facility-item">
                    <div class="heading text-uppercase">The Cafe &#64; Embun</div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-xs-12 facility">
                <div class="facility-item">
                    <img src="~/images/dining/The Cafe Embun.jpg" alt="The Cafe &#64; Embun" />
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/DSC02595.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/dining table reflection.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/DSC02599.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/DSC02792.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/DSC02592.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                    <div class="col-md-2 col-xs-6">
                        <img class="dining-image" src="~/images/dining/DSC02798.jpg" alt="The Cafe &#64; Embun" />
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-xs-12 facility">
                <div class="facility-item">
                    <div class="text">
                        <p class="desc">
                            At the Cafe &#64; Embun, the food we serve is made fresh using local ingredients and as much as possible, sourced from nearby local suppliers.
                            Our menus change fairly regularly, depending on seasonal availability and we’ve also started our own vegetable patch so you’re likely to be feasting
                            on our homegrown greens and herbs!
                        </p>
                        <p class="desc">
                            Vegetarian/ vegan options are available daily - just ask one of our staff members and they’ll let you know the selection available.
                        </p>
                        <p class="desc">
                            We’re also happy to cater for other special dietary restrictions but with ample notice please, so we can be sure we’re able to meet your needs.
                        </p>
                        <p class="desc">
                            Non in-house guests are welcome to enjoy a scrumptious and relaxing meal at the Cafe@Embun any day of the week.
                            To help ensure the privacy and comfort of our in-house guests, non in-house guests are kindly requested to make reservations at least one day prior.
                            This is really to avoid having to turn away walk-ins as in-house guests do have priority over the Clubhouse area.
                        </p>
                        <p class="desc">
                            Day visitors must make prior reservations for our lunch and dinner services, which operate for non in-house guests during the following hours:
                            <ul>
                                <li>Weekday lunch (Mon to Fri): 12pm to 2.30pm</li>
                                <li>Weekend brunch (Sat, Sun & PH): 11am to 3pm</li>
                                <li>Dinner (Mon to Sun): 6pm to 9.30pm</li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row section-inquiry">
            <div class="col-md-12 col-lg-12 inquiry">
                <div class="contact-form" ng-app="app" ng-controller="diningInquiryFormController">
                    <form novalidate angular-validator angular-validator-submit="onDiningInquiryFormSubmit()" name="diningInquiryForm">
                        <div class="row">
                            <div class="col-sm-8 col-centered">
                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                        <label class="font-size-20pt">For dining reservations, please complete the form below</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Full Name <span class="text-danger">*</span></label>
                                            <div class="col-xs-4">
                                                <select class="field-text" required tabindex="4" ng-model="form.Salutation">
                                                    <option>Mr</option>
                                                    <option>Mrs</option>
                                                    <option>Ms</option>
                                                </select>
                                            </div>
                                            <div class="col-xs-8">
                                                <input type="text" class="field-text" name="Name" placeholder="" ng-model="form.Name" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Email <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input type="text" class="field-text" name="Email" placeholder="" ng-model="form.Email" validate-on="blur" ng-pattern="/^[_a-z0-9]+(\.[_a-z0-9]+)*&#64[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Phone. No <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input type="text" class="field-text" name="Phone" placeholder="" ng-model="form.Phone" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Dining option <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <select class="field-text" required tabindex="4" ng-model="form.DiningOption">
                                                    <option>Weekday lunch</option>
                                                    <option>Weekend/PH lunch</option>
                                                    <option>Dinner</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Date <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input type="text" class="field-text diningdate-to" ng-model="DiningDate" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Time <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input class="field-text time-picker" combo-date name="diningTime" type="text" data-format="h:mm a" data-template="hh mm a" ng-model="DiningTime" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Adults <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input type="number" class="field-text" name="Adults" placeholder="" ng-model="form.Adults" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label class="col-xs-12 margin-top-20px">Children <span class="text-danger">*</span></label>
                                            <div class="col-sm-12">
                                                <input type="number" class="field-text" name="Children" ng-model="form.Children" validate-on="dirty" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-xs-12 margin-top-20px">Message <span class="text-danger">*</span></label>
                                    <div class="col-sm-12">
                                        <textarea cols="30" rows="10" name="Message" class="field-textarea" placeholder="" ng-model="form.Message" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8 col-centered">
                                <button type="submit" class="inquirybutton">SEND ENQUIRY</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section css{
    <link href="~/css/sweetalert.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/angular-1.5.7.js"></script>
    <script src="~/Scripts/angular-animate-1.5.7.js"></script>
    <script src="~/Scripts/angular-messages-1.5.7.js"></script>
    <script src="~/Scripts/angular-sanitize-1.5.7.js"></script>
    <script src="~/Scripts/angular-validator.js"></script>
    <script src="~/Scripts/app-directives.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>
    <script src="~/Scripts/lib/moment.js"></script>
    <script src="~/Scripts/lib/combodate.js"></script>
    <script src="~/app/Controller/DiningInquiryFormController.js"></script>

    <script type="text/javascript">

        var app = angular.module("app", ["ngAnimate", "ngMessages", "angularValidator"]);
        var directives = {};
        var factories = {};
        var controllers = {};

        app.factory(factories);

        directives.comboDate = softinn.directives.comboDate.Factory();
        app.directive(directives);

        diningInquiryFormController.$inject = ["$scope", "$http", "$filter"];
        controllers.diningInquiryFormController = diningInquiryFormController;
        app.controller(controllers);
    </script>
}
@using Softinn.EntityModels.ViewModel
@model object

@{
    if (ViewBag.ViewModel.Hotel != null)
	{
        ViewBag.MetaTitle = $"Privacy Policies - {ViewBag.ViewModel.Hotel.DisplayName}";
        ViewBag.MetaDescription = $"Privacy Policies - {ViewBag.ViewModel.Hotel.DisplayName}";
    }

    List<CustomPrivacyPolicyViewModel> privacyPolicies = ViewBag.ViewModel.CustomPrivacyPolicies;
}
<div id="page-contact-us">

    <section class="section-sub-banner bg-7">
        <div class="awe-overlay"></div>
        <div class="sub-banner">
            <div class="container">
                <div class="text text-center">
                    <h2>Privacy Policy</h2>
                </div>
            </div>
        </div>
    </section>

    <section class="section-contact">
        <div class="container">
            <div class="contact">
                @if (!privacyPolicies.Any())
                {
                    <p>Policy not found</p>
                }
                @if (privacyPolicies.Count == 1)
                {
                    <div class="margin-bottom-120px">
                        @Html.Raw(privacyPolicies.First().PrivacyNotice)
                    </div>
                }
            </div>
        </div>
    </section>

</div>
@using Softinn.EntityModels.ViewModel
@using GadekHotspring.Helpers

@{
    if (ViewBag.ViewModel.Hotel != null)
	{
        ViewBag.MetaTitle = $"Events - {ViewBag.ViewModel.Hotel.DisplayName}";
    }

    List<EventViewModel> events = ViewBag.ViewModel.Events;
}

<section class="section-sub-banner bg-4">
    <div class="awe-overlay"></div>
    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>Events</h2>
            </div>
        </div>
    </div>
</section>

<section class="section-promotion">
    <div class="container">
        @if (events.Any())
        {
            <div class="row">
                @foreach (var e in events)
                {
                    <div class="col-md-4">
                        <div class="cms-promotion promotion-box">
                            @if (e.Photos != null && e.Photos.Any())
                                            {
                                <div class="img">
                                    <img src="@BvHelper.GetImageLinkFromStorage(e.Photos.FirstOrDefault().URLStorage)" />
                                </div>
                            }
                            <div class="title-wrapper">
                                <div class="title">
                                    <h2>@e.Name</h2>
                                    <a href="/events/Detail/@e.Name.ToSeoFriendly()" class="awe-btn awe-btn-13">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section css{
    <link href="~/css/promotion.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
}

@section scripts{
    <script src="~/Scripts/promotion.js"></script>
}
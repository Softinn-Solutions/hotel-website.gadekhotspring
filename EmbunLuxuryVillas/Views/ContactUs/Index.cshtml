@using Softinn.EntityModels.ViewModel
@{
    ViewBag.MetaTitle = $"Contact of {ViewBag.ViewModel.Hotel.DisplayName}";
    ViewBag.MetaDescription = $"Address and phone number of {ViewBag.ViewModel.Hotel.DisplayName}";

    HotelViewModel hotel = ViewBag.ViewModel.Hotel;
}
<div id="page-contact-us">

    <section class="section-sub-banner bg-7">
        <div class="awe-overlay"></div>
        <div class="sub-banner">
            <div class="container">
                <div class="text text-center">
                    <h2>Contact Us</h2>
                    <p>Clear all your doubts by contacting us</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section-contact">
        <div class="container">
            <div class="contact">
                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <div class="text">
                            <h2>Contact</h2>
                            <ul>
                                <li><i class="fa fa-map-marker contact-icon"></i> @hotel.DisplayAddress</li>
                                <li><i class="fa fa-phone contact-icon"></i> <a href="tel:@hotel.DisplayPhone" rel="nofollow">@hotel.DisplayPhone</a></li>
                                @if (hotel.DisplayFax != null)
                                {
                                    <li><i class="fa fa-fax contact-icon"></i> @hotel.DisplayFax</li>
                                }
                                <li><i class="fa fa-envelope-o contact-icon"></i> <a href="mailto:@hotel.Email">@hotel.DisplayEmail</a></li>
                            </ul>
                            <span class="divider-line"></span>
                            <div class="chgfont"><p>Look no further! Book directly on this site for best price!</p></div>
                            <div class="mailchimp">
                                <div class="mailchimp-form">
                                    <a href="/Reservation" type="submit" class="awe-btn awe-btn-13">BOOK AT BEST PRICE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <div class="contact-form" ng-app="app" ng-controller="contactFormController">
                            <form novalidate angular-validator angular-validator-submit="onContactFormSubmit()" name="contactForm">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Name" placeholder="Name" ng-model="form.Name" validate-on="dirty" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Email" placeholder="Email" ng-model="form.Email" validate-on="blur" ng-pattern="/^[_a-z0-9]+(\.[_a-z0-9]+)*&#64[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Subject" placeholder="Subject" ng-model="form.Subject" validate-on="dirty" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="field-text" name="Phone" placeholder="Phone.No" ng-model="form.Phone" validate-on="dirty" required>
                                    </div>
                                    <div class="col-sm-12">
                                        <textarea cols="30" rows="10" name="Message" class="field-textarea" placeholder="Your Message" ng-model="form.Message" validate-on="dirty" required></textarea>
                                    </div>
                                    <div class="col-sm-6">
                                        <button type="submit" class="ghostbutton" ng-disabled="myFormName.$invalid">SEND</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section-map">
        <h1 class="element-invisible">Map</h1>
        <div class="contact-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3983.0808528576044!2d101.83463411525194!3d3.3302017529404235!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31cc3dd53892f7dd%3A0xe2c451565f83cc9!2sEmbun%20Luxury%20Villas!5e0!3m2!1sen!2smy!4v1583395087917!5m2!1sen!2smy" frameborder="0" style="border: 0; width: 100%; height: 470px; " allowfullscreen></iframe>
        </div>
    </section>

</div>

@section css{
    <link href="~/css/sweetalert.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/angular-1.5.7.js"></script>
    <script src="~/Scripts/angular-animate-1.5.7.js"></script>
    <script src="~/Scripts/angular-messages-1.5.7.js"></script>
    <script src="~/Scripts/angular-sanitize-1.5.7.js"></script>
    <script src="~/Scripts/angular-validator.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>
    <script src="~/App/Controller/ContactFormController.js"></script>

    <script type="text/javascript">
        var app = angular.module("app", ["ngAnimate", "ngMessages", "angularValidator"]);
        var directives = {};
        var factories = {};
        var controllers = {};

        app.factory(factories);

        app.directive(directives);

        contactFormController.$inject = ["$scope", "$http"];
        controllers.contactFormController = contactFormController;
        app.controller(controllers);
    </script>
}